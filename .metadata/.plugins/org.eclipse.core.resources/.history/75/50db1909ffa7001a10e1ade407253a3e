package com.sample
 
import com.sample.Klima;
 
rule "Pravilo 4"
    when
       k: Klima(kvadratura<=50 && grejanjeViseProstorija==false &&
       snagaKlime==0)
    then
		k.setSnagaKlime(9000);
		update(k)
end

rule "Pravilo 5"
    when
       k: Klima(kvadratura<=50 && grejanjeViseProstorija==true &&
       snagaKlime==0)
    then
		k.setSnagaKlime(12000);
		update(k)
end

rule "Pravilo 6"
    when
       k: Klima(kvadratura>50 && kvadratura<75 && 
       grejanjeViseProstorija==false &&
       snagaKlime==0)
    then
		k.setSnagaKlime(12000);
		update(k)
end

